<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rLStegano">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:id="@+id/ivCitraR"
                android:tooltipText="Input Gambar di sini"
                android:src="@drawable/ic_launcher_background"/>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLStegano"
            android:id="@+id/tvpublicuser1"
            android:text="Public Key anda : "
            android:gravity="center"
            android:textSize="15dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvpublicuser1"
            android:id="@+id/etPublic"
            android:textSize="15dp"
            android:hint="Masukan Public Key yang dituju"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPublic"
            android:id="@+id/etSecretMessage"
            android:textSize="15dp"
            android:hint="Masukan Secret Message yang dituju"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etSecretMessage"
            android:orientation="horizontal"
            android:id="@+id/linear1">
        <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btEncode"
                android:layout_marginRight="10dp"
                android:text="ENCODE"/>
        <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btDecode"
                android:layout_marginLeft="10dp"
                android:text="DECODE"/>
    </LinearLayout>

</RelativeLayout>